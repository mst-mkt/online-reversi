datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  createdAt DateTime
}

model Room {
  roomId      String       @id
  board       Json
  status      String
  createdAt   DateTime
  userOnRooms UserOnRoom[]
}

model UserOnRoom {
  firebaseId String
  in         DateTime
  out        DateTime?
  Room       Room      @relation(fields: [roomId], references: [roomId])
  roomId     String

  @@id([firebaseId, roomId])
}
